@{
    ViewData["Title"] = "Home Page";
}

@model FilesViewModel;

<div class="text-center">
    <h1 class="display-4">Files</h1>

    <p class="lead text-center">Files</p>
    <ul>
        @foreach (string file in Model.Files)
        {
            <li>@file</li>
        }
    </ul>
    <p class="lead text-center">Secrets</p>
    <ul>
        @foreach (string secret in Model.Secrets)
        {
            <li>@secret</li>
        }
    </ul>
    <p class="lead text-center">Envuronment Variables</p>
    <ul>
        @foreach (string env in Model.EnvironmentVariables)
        {
            <li>@env</li>
        }
    </ul>

</div>
<div class="text-center">
    <input type="button"
        value="Create Files"
           onclick="location.href='@Url.Action("CreateFiles", "Home")'" />
    <input type="button"
        value="Delete Files"
           onclick="location.href='@Url.Action("DeleteFiles", "Home" )'" />
</div>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>